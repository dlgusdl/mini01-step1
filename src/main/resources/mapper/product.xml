<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.firstapp.model.poductRepository">

  <select id = "findById" resultType = "site.metacoding.firstapp.model.Product">
        select * from product where id = #{id}
    </select>

 <select id="findAll" resultType="site.metacoding.firstapp.model.Product">
    select * from product
</select>

  <insert id = "insert">
        insert into product (name, price, qty, created_at) values (#{name}, #{price}, #{qty}, now())
    </insert>

  <update id = "update">
        update product set name = #{name}, price = #{price}, qty = #{qty} where id = #{id}
    </update>

  <delete id = "deleteById">
        delete from product where id = #{id}
    </delete>

</mapper>

